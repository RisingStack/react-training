{
"$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "email": { "type": "string", "format": "email", "maxLength": 90 },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 90
    }
  },
  "required": ["email", "password"],
  "additionalProperties": false,
  "errorMessage": {
    "properties": {
      "email": "Email must be a valid email",
      "password": "Password must be between 5 and 90 characters"
    }
  }
}